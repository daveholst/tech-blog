<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css" />
    <title>Holst Tech Blog</title>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img src="/images/top-logo.png" width="150" height="28" />
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a href="/" class="navbar-item">
            Home
          </a>

          <a href="/post" id="nav-post-btn" class="navbar-item">
            Post
          </a>
          <a class="navbar-item">
            Dashboard
          </a>
          <a class="navbar-item">
            GitHub
          </a>

        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            {{#if loggedIn}}
              <h4 class="mr-4">Hi, {{username}}</h4>
            {{/if}}
            <div class="buttons">
              {{#unless loggedIn}}
                <a id="nav-signup" class="button is-primary">
                  <strong>Sign up</strong>
                </a>
              {{/unless}}
              <a id="nav-login" class="button is-light">
                {{#if loggedIn}}
                  Log Out
                {{else}}
                  Log In
                {{/if}}
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    {{! Login Modal }}
    <div id="login-modal" class="modal">
      <div id="login-bg" class="modal-background"></div>
      <div class="modal-content">
        <form id="login-form" class="box">
          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input class="input" name="username" autocomplete="username" type="text" placeholder="e.g. coolUs3r" />
            </div>
          </div>

          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input
                class="input"
                name="password"
                autocomplete="current-password"
                type="password"
                placeholder="********"
              />
            </div>
          </div>

          <button type="submit" class="button is-primary">Login</button>
        </form>
      </div>
      <button id="login-close-btn" class="modal-close is-large" aria-label="close"></button>
    </div>
    {{! SignUp Modal }}
    <div id="signup-modal" class="modal">
      <div id="signup-bg" class="modal-background"></div>
      <div id="signup-content" class="modal-content">
        <form id="signup-form" class="box">
          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input
                class="input"
                name="username"
                autocomplete="username"
                type="text"
                placeholder="eg. coolUs3r"
                required
              />
            </div>
          </div>
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input
                class="input"
                name="name"
                autocomplete="name"
                autotype="text"
                placeholder="eg. John Smith"
                required
              />
            </div>
          </div>
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input
                class="input"
                name="email"
                autocomplete="email"
                type="email"
                placeholder="e.g. alex@example.com"
                required
              />
            </div>
          </div>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input
                class="input"
                name="password"
                autocomplete="new-password"
                type="password"
                minlength="8"
                placeholder="********"
                required
              />
            </div>
          </div>

          <button type="submit" class="button is-primary">Sign up</button>
        </form>
      </div>
      <button id="signup-close-btn" class="modal-close is-large" aria-label="close"></button>
    </div>
    {{{body}}}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="js/login.js"></script>
    <script src="js/signup.js"></script>
  </body>
</html>