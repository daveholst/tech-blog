<article>
  <div class="container p-5">
    <div class="content">
      <h2 class="is-size-3 mb-2">{{title}}</h2>
      <h3 class="is-size-5 mb-1">{{user.name}}</h3>
      <h4 class="is-size-6 mb-5">{{format_date createdAt}}</h4>
      <p>{{content}}</p>
      <div class="buttons">
        <button class="button is-primary">Comment</button>
        <button class="button is-link">Edit</button>
        <button class="button is-danger">Delete</button>
      </div>
    </div>
  </div>
</article>
{{#each comments as |comment|}}
{{> single-comment}}
{{/each}}