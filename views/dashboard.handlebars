<div class="container p-5">
  <div class="content">
    <h1 class="is-size-1">My Dashboard</h1>
    <div class="field is-grouped">
      <p class="control">
        <a href="/post">
          <button class="button is-primary">
            Make a New Post
          </button>
        </a>
      </p>
      <p class="control">
        <button class="button is-warning">
          Edit Comments
        </button>
      </p>
      <p class="control">
        <button class="button is-warning">
          Edit Posts
        </button>
      </p>
    </div>
    <h3>My Posts</h3>
    {{#each allUsersPosts as |post|}}
      {{> edit-single-post}}
    {{/each}}
  </div>
</div>
<script src="js/dashboard.js"></script>
